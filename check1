<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Runaway Button</title>
  <style>
    body {
      height: 100vh;
      margin: 0;
      overflow: hidden;
      background-color: #111;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    button {
      position: absolute;
      padding: 15px 30px;
      font-size: 18px;
      cursor: pointer;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 10px;
      transition: top 0.2s, left 0.2s;
    }
  </style>
</head>
<body>

  <button id="runawayBtn">Click me!</button>

  <script>
    const btn = document.getElementById('runawayBtn');
    const offset = 100;

    document.addEventListener('mousemove', (e) => {
      const rect = btn.getBoundingClientRect();
      const dx = e.clientX - (rect.left + rect.width / 2);
      const dy = e.clientY - (rect.top + rect.height / 2);
      const distance = Math.sqrt(dx * dx + dy * dy);

      if (distance < offset) {
        // Move button away from mouse
        const angle = Math.atan2(dy, dx);
        const moveX = -Math.cos(angle) * offset;
        const moveY = -Math.sin(angle) * offset;

        const newX = Math.min(window.innerWidth - rect.width, Math.max(0, rect.left + moveX));
        const newY = Math.min(window.innerHeight - rect.height, Math.max(0, rect.top + moveY));

        btn.style.left = newX + 'px';
        btn.style.top = newY + 'px';
      }
    });

    // Initial button position
    btn.style.left = '50%';
    btn.style.top = '50%';
    btn.style.transform = 'translate(-50%, -50%)';
  </script>

</body>
</html>
